<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">

        <shape android:shape="rectangle">
            <padding android:bottom="@dimen/button_padding"
                     android:left="@dimen/button_padding"
                     android:right="@dimen/button_padding"
                     android:top="@dimen/button_padding"/>
            <corners android:radius="2dip" />
            <solid android:color="@color/colorOrangeDark"/>
            <stroke android:width="1dip" android:color="@color/colorOrangeDark" />
        </shape>

    </item>
    <item android:state_focused="true">

        <shape android:shape="rectangle">
            <padding android:bottom="@dimen/button_padding"
                android:left="@dimen/button_padding"
                android:right="@dimen/button_padding"
                android:top="@dimen/button_padding"/>
            <corners android:radius="2dip" />
            <solid android:color="@color/colorOrange"/>
            <stroke android:width="1dip" android:color="@color/colorOrange" />
        </shape>

    </item>
    <item>

        <shape android:shape="rectangle">
            <padding android:bottom="@dimen/button_padding"
                android:left="@dimen/button_padding"
                android:right="@dimen/button_padding"
                android:top="@dimen/button_padding"/>
            <corners android:radius="2dip" />
            <solid android:color="@color/colorOrange"/>
            <stroke android:width="1dip" android:color="@color/colorOrange" />
        </shape>

    </item>
</selector>